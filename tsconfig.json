{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"],
      "@animations/*": ["./public/animation/*"],
      "@components/*": ["./components/*"]
    }
  },
  "typeAcquisition": {
    "include": ["./interfaces/**/*"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    "**/*.json",
    "src/**/*.d.ts",
    "interfaces/theme.d.ts"
  ],
  "exclude": ["node_modules"]
}
